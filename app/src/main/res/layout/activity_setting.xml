<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black">

    <ScrollView
        android:scrollbars="vertical"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        android:scrollbarSize="@dimen/_1ssp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/settingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5ssp"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/settingBackBtn"
                    android:layout_width="@dimen/_30ssp"
                    android:layout_height="@dimen/_30ssp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/_2ssp"
                    android:src="@drawable/ic_arrow_back_white_24dp"></ImageView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5ssp"
                    android:fontFamily="@font/imprima"
                    android:gravity="left"
                    android:text="Setting"
                    android:textColor="@color/Red"
                    android:textSize="@dimen/_30ssp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5ssp"
                    android:fontFamily="@font/imprima"
                    android:gravity="left"
                    android:text="@string/findHelpStr"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_15ssp"></TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_5ssp"
                    android:layout_marginLeft="@dimen/_5ssp"
                    android:layout_marginRight="@dimen/_5ssp"
                    android:background="@drawable/bottom_line"
                    android:backgroundTint="@color/White"></View>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/settingMainLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settingLayout"
                android:layout_margin="@dimen/_5ssp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5ssp"
                    android:drawableTint="@color/White"
                    android:fontFamily="@font/imprima"
                    android:gravity="left"
                    android:text="@string/languageStr"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:padding="@dimen/_3ssp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/dimBlackColorBg"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="@dimen/_20ssp"
                        android:layout_height="@dimen/_20ssp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_2ssp"
                        android:src="@drawable/ic_language_black_24dp"
                        android:tint="@color/Gray"></ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:background="@color/dimBlackColorBg"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/imprima"
                            android:gravity="center_vertical"
                            android:text="@string/englishStr"
                            android:textColor="@color/Gray"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/imprima"
                            android:gravity="left"
                            android:text="@string/languageStr"
                            android:textColor="@color/Gray"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="bold"
                            android:visibility="gone"></TextView>
                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:gravity="center_vertical"
                        android:visibility="gone"
                        app:thumbTint="@color/Red"
                        app:trackTint="@android:color/holo_red_light"></androidx.appcompat.widget.SwitchCompat>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5ssp"
                    android:drawableTint="@color/Gray"
                    android:fontFamily="@font/imprima"
                    android:gravity="left"
                    android:text="@string/storageStr"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:padding="@dimen/_3ssp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/dimBlackColorBg"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="@dimen/_20ssp"
                        android:layout_height="@dimen/_20ssp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_2ssp"
                        android:src="@drawable/ic_folder_black_24dp"
                        android:tint="@color/Gray"></ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:background="@color/dimBlackColorBg"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/imprima"
                            android:gravity="left"
                            android:text="@string/folderLocationStr"
                            android:textColor="@color/Gray"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold"></TextView>

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5ssp"
                    android:drawableTint="@color/Gray"
                    android:fontFamily="@font/imprima"
                    android:gravity="left"
                    android:text="@string/notificationStr"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:padding="@dimen/_3ssp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/dimBlackColorBg"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="@dimen/_20ssp"
                        android:layout_height="@dimen/_20ssp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_2ssp"
                        android:src="@drawable/ic_notifications_active_black_24dp"
                        android:tint="@color/Gray"></ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/imprima"
                            android:gravity="left"
                            android:text="@string/allowNotificationStr"
                            android:textColor="@color/Gray"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>

                    <androidx.appcompat.widget.SwitchCompat
                        app:showText="true"
                        android:id="@+id/switchBtnNotification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:gravity="center_vertical"
                        app:thumbTint="@color/Red"
                        app:trackTint="@color/LightRed"></androidx.appcompat.widget.SwitchCompat>
                </LinearLayout>

                <LinearLayout
                    android:padding="@dimen/_3ssp"
                    android:id="@+id/clearFolderBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2ssp"
                    android:background="@drawable/setting_button_clicks"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="@dimen/_20ssp"
                        android:layout_height="@dimen/_20ssp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_2ssp"
                        android:src="@drawable/ic_delete_sweep_black_24dp"
                        android:tint="@color/Gray"></ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/imprima"
                            android:gravity="left"
                            android:text="@string/clearCacheStr"
                            android:textColor="@color/Gray"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/imprima"
                            android:gravity="left"
                            android:text="@string/cacheDescStr"
                            android:textColor="@color/Gray"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:padding="@dimen/_3ssp"
                    android:id="@+id/resetBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2ssp"
                    android:background="@drawable/setting_button_clicks"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="@dimen/_20ssp"
                        android:layout_height="@dimen/_20ssp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_2ssp"
                        android:src="@drawable/ic_restore_black_24dp"
                        android:tint="@color/Gray"></ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/imprima"
                            android:gravity="left"
                            android:text="@string/resetStr"
                            android:textColor="@color/Gray"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/imprima"
                            android:gravity="left"
                            android:text="@string/allAppClearStr"
                            android:textColor="@color/Gray"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_5ssp"
                    android:drawableTint="@color/Gray"
                    android:fontFamily="@font/imprima"
                    android:gravity="left"
                    android:text="@string/legalStr"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"></TextView>

                <LinearLayout
                    android:padding="@dimen/_3ssp"
                    android:id="@+id/privacyPolicyBtnID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/setting_button_clicks"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="@dimen/_20ssp"
                        android:layout_height="@dimen/_20ssp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_2ssp"
                        android:src="@drawable/ic_priority_high_black_24dp"
                        android:tint="@color/Gray"></ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:background="@drawable/setting_button_clicks"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/imprima"
                            android:gravity="left"
                            android:text="@string/privacyPolicyStr"
                            android:textColor="@color/Gray"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/_30ssp"
                        android:layout_height="@dimen/_30ssp"
                        android:layout_gravity="right|center_vertical"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"></ImageView>
                </LinearLayout>

                <LinearLayout
                    android:padding="@dimen/_3ssp"
                    android:id="@+id/termsOfUseBtnID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2ssp"
                    android:background="@drawable/setting_button_clicks"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="@dimen/_20ssp"
                        android:layout_height="@dimen/_20ssp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_2ssp"
                        android:src="@drawable/ic_terms_conditions"
                        android:tint="@color/Gray"></ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/imprima"
                            android:gravity="left"
                            android:text="@string/termsOfUseStr"
                            android:textColor="@color/Gray"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/_30ssp"
                        android:layout_height="@dimen/_30ssp"
                        android:layout_gravity="right|center_vertical"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"></ImageView>
                </LinearLayout>

                <LinearLayout
                    android:padding="@dimen/_3ssp"
                    android:id="@+id/helpBtnID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2ssp"
                    android:background="@drawable/setting_button_clicks"
                    android:weightSum="3">

                    <ImageView
                        android:layout_width="@dimen/_20ssp"
                        android:layout_height="@dimen/_20ssp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_2ssp"
                        android:src="@drawable/ic_help_black_24dp"
                        android:tint="@color/Gray"></ImageView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="3"
                        android:background="@drawable/setting_button_clicks"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/imprima"
                            android:gravity="left"
                            android:text="@string/helpStr"
                            android:textColor="@color/Gray"
                            android:textSize="@dimen/_13ssp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/_30ssp"
                        android:layout_height="@dimen/_30ssp"
                        android:layout_gravity="right|center_vertical"
                        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"></ImageView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settingMainLayout"
                android:layout_margin="@dimen/_5ssp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5ssp"
                    android:fontFamily="@font/imprima"
                    android:gravity="center"
                    android:text="@string/contactStr"
                    android:textColor="@color/White"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"></TextView>


            </LinearLayout>
            <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_below="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                ads:adSize="BANNER"
                ads:adUnitId="@string/bannerID"></com.google.android.gms.ads.AdView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>